<?xml version="1.0" encoding="utf-8"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <xar:if condition="in_array('dropdown',$show)">
        <div style="float: left; margin-right: 20px">
    <xar:template file="dropdown"/>
        </div>
    </xar:if>
    <xar:if condition="in_array('calendar',$show) AND in_array('period',$show)">
        <div style="float: left; margin-right: 20px">
            OR
        </div>
    </xar:if>
    <xar:if condition="in_array('calendar',$show)">
        <div style="float: left;">
            <xar:template file="calendar"/>
        </div>
    </xar:if>
</xar:template>
